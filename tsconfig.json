{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016"],
    "baseUrl": "./",
    "declaration": true,
    "types": ["reflect-metadata", "node"],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/tests",
    "node_modules",
    "dist"
  ]
}
